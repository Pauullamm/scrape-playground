{
  "manifest_version": 3,
  "name": "Terrier Pup",
  "description": "A chrome extension of the Terrier web application",
  "options_page": "options.html",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "whiteDogLogo.png"
  },
  "icons": {
    "128": "whiteDogLogo.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "whiteDogLogo.png"],
      "matches": []
    }
  ]
}
